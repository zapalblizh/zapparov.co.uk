<header x-ref="header">
  <div class="bg-skin-600 dark:bg-zinc-800 rounded-xl mx-auto flex container items-center justify-between my-6 py-4" aria-label="Global">
    <a href="/" class="flex items-center gap-2 font-bold whitespace-nowrap [&:hover_img]:opacity-70">
      <div class="w-10 rounded-full">
        {% image '/img/zapalblizh.jpeg', 'Aleksandr Zapparov Headshot', [100], 'rounded-full border-2 border-terminal-200 transition duration-200' %}
      </div>
      Alex Zappa
    </a>
    <div class="flex gap-x-12">
      <div class="hidden sm:flex sm:gap-x-12">
        <a href="/" class="text-sm font-semibold leading-6">About</a>
        <a href="/achievements/" class="text-sm font-semibold leading-6">Achievements</a>
        {# <a href="/blog/" class="text-sm font-semibold leading-6">Blog</a> #}
      </div>
      <button class="-my-2.5 inline-flex items-center justify-center rounded-md p-2.5"
              aria-label="Switch to dark theme"
              :aria-label="theme.dark ? 'Switch to light theme' : 'Switch to dark theme'"
              @click="toggleTheme()">
        <span class="sr-only" x-text="theme.dark ? 'Switch to light theme' : 'Switch to dark theme'">Switch to dark theme</span>
        <span x-show="theme.dark">{% feather "sun", { "class": "h-5 w-5" } %}</span>
        <span x-show="!theme.dark" x-cloak>{% feather "moon", { "class": "h-5 w-5" } %}</span>
      </button>
    </div>
  </div>
</header>
