{
  "name": "zapparov.dev",
  "version": "1.0.0",
  "description": "Aleksandr Zapparov Website",
  "scripts": {
    "clean": "rimraf './_site'",
    "postbuild": "npm run export:twconfig",
    "view:twconfig": "npx tailwind-config-viewer -o",
    "export:twconfig": "npx tailwind-config-viewer export ./_site/tw-config",
    "debug:11ty": "DEBUG=Eleventy* npx @11ty/eleventy",
    "watch:11ty": "npx @11ty/eleventy --serve --quiet",
    "build:11ty": "npx @11ty/eleventy",
    "build:js": "esbuild ./assets/js/scripts.js --outfile=./_site/js/scripts.js --bundle --minify",
    "watch:js": "esbuild ./assets/js/scripts.js --outfile=./_site/js/scripts.js --bundle --watch --sourcemap",
    "watch-css": "npx tailwindcss -i ./assets/css/styles.css -o ./_site/css/styles.css -w",
    "watch:tailwind": "npx tailwindcss --postcss -i ./assets/css/styles.css -o ./_site/css/styles.css --watch",
    "build:tailwind": "npx tailwindcss --postcss -i ./assets/css/styles.css -o ./_site/css/styles.css --minify",
    "start": "ELEVENTY_ENV=development npm-run-all --parallel watch:*",
    "build": "ELEVENTY_ENV=production npm-run-all --serial build:js build:tailwind build:11ty",
    "debugstart": "DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
    "benchmark": "DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
    "prettier:check": "prettier --check './src'",
    "prettier:fix": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:zapalblizh/zapparov.co.uk.git"
  },
  "keywords": [
    "11ty",
    "daisyui",
    "alpinejs",
    "aleksandr",
    "zapparov"
  ],
  "author": {
    "name": "Aleksandr Zapparov",
    "email": "aleksandr@zapparov.co.uk",
    "url": "zapparov.dev"
  },
  "license": "UNLICENCED",
  "privacy": "private",
  "homepage": "https://github.com/zapalblizh/zapparov.co.uk#readme",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@11ty/eleventy-upgrade-help": "^2.0.5",
    "alpinejs": "^3.12.1",
    "autoprefixer": "^10.4.14",
    "eleventy-plugin-feathericons": "^1.0.1",
    "eleventy-plugin-metagen": "^1.7.11",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "esbuild": "^0.17.19",
    "eslint-config-prettier": "^9.0.0",
    "flying-pages-module": "^2.1.3",
    "html-minifier": "^4.0.0",
    "husky": "^8.0.3",
    "isbot": "^3.6.13",
    "luxon": "^3.3.0",
    "markdown-it-anchor": "^8.6.7",
    "npm-run-all": "^4.1.5",
    "plausible-tracker": "^0.3.8",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-discard-comments": "^6.0.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-merge-rules": "^6.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.1",
    "slugify": "^1.6.6",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "tailwind-config-viewer": "^1.7.2",
    "tailwindcss": "^3.3.2",
    "tailwindcss-safe-area": "^0.3.0"
  }
}
